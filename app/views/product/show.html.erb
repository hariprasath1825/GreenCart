
  <h1>Product details</h1>
  <div class="fluid">

    <%if @product.image.attached? %>

      <%= image_tag(@product.image) %>

      <%end %>

    <p>Product Name  :    <%=@product.name %> <br></p>
    <p>Product Price :    <%=@product.price %>  Rupees <br></p>
    <p>Product Description :  <%=@product.description %><br></p>
    <p>Available Quantity  :  <%=@product.available_quantity %> Kg<br></p>
  </div>
  <p><%=link_to 'Back' , product_index_path , class:"btn btn-secondary"%></p>


  <%if current_user.role=="customer" %>
  <p><%=link_to 'Add to Cart' , new_product_cart_path(product_id:  @product.id,price: @product.price),class:"btn btn-secondary"%></p>
  <%end %>

<br>
<%unless @reviews.empty? %>
<h3>Comments :</h3>
      <p>----------------------------------------------</p>
    <%@reviews.each do |review| %>

      <p>Name : <%=review.customer.name %> </p>
      <p>Rating : <%=review.rating %>/5 </p>
      <p>Comment : <%=review.comment %> </p>
      <p>----------------------------------------------</p>
      <%end %>
  <%end %>