<%= form_for  @product ,url:{action: :create} do |f|%>
  <h1> Add product</h1>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <br>

  <div class="field">
    <%= f.label :price %>
    <%= f.text_field :price %>
  </div>
  <br>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>
  <br>

  <div class="field">
    <%= f.text_field :seller_id , value:3 ,type: :hidden %>
  </div>

  <div class="field">
    <%= f.label :available_quantity %>
    <%= f.text_field :available_quantity %>
  </div>
  <br>

  <div class="field">
    <%= f.label :category %>
    <%= f.text_field :category %>
  </div>
  <br>

  <div class="actions">
    <%#=link_to 'Back',{controller: 'product',action: 'index'} %>
    <%=f.submit 'Add product' , class:"btn btn-secondary" %>
  </div>
  <br>

<% end  %>

<%= link_to 'Back', product_index_path ,class:"btn btn-secondary" %>