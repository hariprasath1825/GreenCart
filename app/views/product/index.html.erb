
<div class="container-fluid">
  <h1>Product List</h1>
  <table class="table table-striped table-hover ">
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Description</th>
      <!--      <th>Seller id</th>-->
      <th>Available Quantity(kg)</th>
      <th>Category</th>
      <%if current_user.role=="customer" %>
      <th>View</th>
      <%end %>
      <%if current_user.role=="seller" %>
      <th>Edit</th>
        <%end %>
      <th>Seller id</th>
    </tr>
    <%@products.each do |product| %>
      <tr>
        <td><%=product.name %></td>
        <td><%=product.price %></td>
        <td><%=product.description %></td>
        <!--        <td><%#=product.seller_id %></td>-->
        <td><%=product.available_quantity %></td>
        <td><%=product.category %></td>
        <%if current_user.role=="customer" %>
        <td><%=link_to 'View',product_path(id: product.id) %></td>
        <%end %>
        <%if current_user.role=="seller" %>
        <td><%=link_to 'Edit',edit_product_path(id:product.id) %></td>
        <%end %>

        <td><%=product.seller_id%></td>
        <!--        <td><%#=button_to 'Delete', product, method: :destroy %></td>-->
        <%#=link_to 'Destroy',product_destroy_path(:id) %>
      </tr>
    <% end %>
  </table>
</div>
<br>

<%if current_user.role=="seller" %>
<%=link_to 'Add new product', new_product_path , class:"btn btn-secondary"%>
  <%end %>
<%if current_user.role=="customer" %>
<%=link_to 'Cart List', cart_index_path , class:"btn btn-secondary"%>
<%end %>
